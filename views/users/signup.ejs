<%layout("layout/boilerplate") -%>

<div class="row mt-3">
    <h1 class="mb-2 pb-2 offset-3">SignUp for Wandrly</h1>
    <div class="col-8 offset-3">
        <form action="signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">
                    Enter UserName 
                </label>
                <input 
                    id="username" 
                    class="form-control"
                    placeholder="UserName"
                    name="username"
                    type="text"
                    required
                    />
                <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">
                    Enter Password
                </label>
                <input 
                    id="password" 
                    class="form-control"
                    placeholder="Password must contain Special Character Like !@$"
                    name="password"
                    type="password"
                    required
                />
                <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">
                    Enter Email 
                </label>
                <input 
                    id="email" 
                    class="form-control"
                    placeholder="Enter Unique Email"
                    name="email"
                    type="email"
                    required
                />
                <div class="valid-feedback">Looks Good</div>
            </div>
            <br>
            <button class="btn btn-dark">SignUp</button>
        </form>
    </div>
</div>