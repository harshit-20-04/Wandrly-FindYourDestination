<%layout("layout/boilerplate") -%>

<div class="row mt-3">
    <h1 class="mb-2 pb-2 offset-3">Login for Wandrly</h1>
    <div class="col-8 offset-3">
        <form action="login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">
                    Enter UserName 
                </label>
                <input 
                    id="username" 
                    class="form-control"
                    name="username"
                    type="text"
                    required
                    />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">
                    Enter Password
                </label>
                <input 
                    id="password" 
                    class="form-control"
                    name="password"
                    type="password"
                    required
                />
            </div>
            <br>
            <button class="btn btn-dark">Login</button>
        </form>
    </div>
</div>